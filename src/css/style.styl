*
  box-sizing border-box

body
  // padding: 50px
  // font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  // color red
  background-color: white

  #app
    // width 1024px
    // margin 0 auto

    nav
      padding-right 10px
      padding-left @padding-right
      position fixed
      top 0
      left 0
      background-color rgb(44, 62, 80)
      height 30px
      line-height @height
      width 100%
      text-align center
      color white
      z-index 3

      #name
        display block
        position absolute
        float left

        .bold
          font-weight 800
          font-size 18px
      a
        color white
        text-decoration none
        display inline-block
        padding-right 10px
        padding-left @padding-right
        height 30px

        &:hover
          background-color #59ABE3
          // background-color #22A7F0

    section
      position relative
      width 1024px
      z-index 2
      // width 100%
      margin 0 auto
      margin-top 50px

      #index
        text-align center

        .indexContentBlock
          width 512px
          height @width
          // background-color #141414
          display block
          position relative
          float left
          transition width 0.2s, height 0.2s
          font-size 14px
          border 1px solid white
          color white
          padding 10px

          &:hover .glyphicon
            display block

          &.expandedBlock
            width 100%
            height auto

            & .blockHeader
              width 100%
              height auto

          &>.glyphicon
            display none
            cursor pointer
            position absolute
            right 0px
            top @right
            // background-color black
            background-color rgb(44, 62, 80)
            width 20px
            line-height @width
            height @width
            // border-radius 3px

          & .blockHeader
            width 100%
            height 100%
            text-transform uppercase
